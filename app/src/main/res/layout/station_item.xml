<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">



    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="12dp"
        android:layout_margin="5dp">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="16dp"
            android:padding="16dp" >


            <TextView
                android:id="@+id/nameTV"
                android:textSize="15sp"
                android:layout_alignTop="@id/stationIV"
                android:text="nameTV"
                android:layout_marginEnd="150dp"
                android:layout_alignParentEnd="true"
                android:gravity="center"
                android:textColor="#000"
                android:layout_width="50dp"
                android:layout_height="wrap_content" />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#0277bd"
                android:layout_alignParentStart="true"
                android:layout_marginStart="110dp"
                android:id="@+id/distanceValTV"
                android:textSize="13sp"
                android:layout_alignBottom="@id/stationIV"
                android:text="distance unknown"/>


            <ProgressBar
                android:id="@+id/progress"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
              />

            <ImageView
                android:id="@+id/stationIV"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                card_view:srcCompat="@color/colorPrimary" />

            <TextView
                android:id="@+id/a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="45dp"
                android:layout_alignTop="@id/price1"
                android:text="₪"
                android:textSize="13sp" />

            <TextView
                android:text="₪"
                android:layout_marginTop="40dp"
                android:id="@+id/b"
                android:textSize="13sp"
                android:layout_alignStart="@id/a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="₪"
                android:id="@+id/c"
                android:textSize="13sp"
                android:layout_alignBottom="@id/stationIV"
                android:layout_alignStart="@id/a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:textSize="13sp"
                android:layout_alignTop="@id/stationIV"
                android:text="price1"
                android:id="@+id/price1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:layout_alignStart="@id/price1"
                android:layout_marginTop="40dp"
                android:text="price2"
                android:id="@+id/price2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="price3"
                android:layout_alignBottom="@id/stationIV"
                android:layout_alignParentEnd="true"
                android:id="@+id/price3"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="70dp"
                android:text="self-service"
                android:id="@+id/self_service"
                android:layout_alignTop="@id/stationIV"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="cash"
                android:layout_alignBottom="@id/stationIV"
                android:layout_alignEnd="@id/self_service"
                android:layout_marginTop="60dp"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="credit card"
                android:id="@+id/credit-card"
                android:layout_marginTop="40dp"
                android:layout_alignStart="@id/self_service"
                android:textSize="13sp"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>